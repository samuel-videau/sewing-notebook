{
  "$id": "supply.json",
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "required": ["name", "type", "color", "quantityLeft"],
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string", "description": "Name of the item (required)" },
    "description": { "type": "string", "description": "Description of the item" },
    "type": { "type": "string", "description": "Type of the item (required)" },
    "color": { "type": "string", "description": "Color of the item (required)" },
    "quantityLeft": { "type": "integer", "minimum": 0, "description": "Remaining quantity of the item (required)" }
  }
}
